<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBookingActivity"
    android:orientation="vertical"
    android:background="#dcdcdc">

    <TextView
        android:text="Choose Department: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner_departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawSelectorOnTop="true"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/edit_text_departments"
        android:hint="Department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"/>

    <TextView
        android:text="Choose Doctor Name: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner_doctors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawSelectorOnTop="true"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/edit_text_doctors"
        android:hint="Doctors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"/>

    <TextView
        android:text="Choose Date: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5px">

        <EditText
            android:id="@+id/edit_text_appointment_date"
            android:hint="Date"
            android:layout_width="wrap_content"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="left" />
        <ImageView
            android:id="@+id/image_view_date"
            android:src="@android:drawable/ic_menu_today"
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


    <TextView
        android:text="Choose Time: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawSelectorOnTop="true"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/edit_text_times"
        android:hint="Times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"/>

    <Button
        android:id="@+id/button_add_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Add Appointment"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:background="#008577"/>

</LinearLayout>